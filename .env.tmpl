# --- Azenord Mesh: Сетевые настройки ---
# Публичный домен (FQDN) твоего сервера
SERVER_ADDR=your-domain.com

# Секретный путь для xHTTP (рекомендуется длинная случайная строка)
XHTTP_PATH=/your-secret-grpc-path

# Пути к SSL сертификатам (отрисованы будут в config.json)
CERT_PATH=/path/to/your/fullchain.cer
KEY_PATH=/path/to/your/private.key

# --- Управление Xray Core ---
# Адрес для gRPC API управления (обязательно совпадает с config.json)
XRAY_GRPC_ADDR=127.0.0.1:10085

# --- База данных ---
# SQLite используется по умолчанию
DATABASE_URL=sqlite:///./data/hrm_database.db

# --- Логика транспорта ---
# Список тегов через запятую (vless-vision,vless-h2,vless-h3)
ACTIVE_INBOUND_TAGS=vless-vision,vless-h2,vless-h3
DEFAULT_MESH_OUTBOUND=vless-vision

# Порты для инбаундов (должны соответствовать ACTIVE_INBOUND_TAGS)
PORT_vless_vision=4430
PORT_vless_h2=10002
PORT_vless_h3=4433
