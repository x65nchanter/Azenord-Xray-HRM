[Unit]
Description=Azenord HRM FastAPI Service (Gunicorn)
After=network.target

[Service]
# Имя пользователя, от которого бежит проект
User={{ settings.SYSTEM_USER }}
Group=www-data
# Путь к папке проекта
WorkingDirectory={{ settings.PROJECT_ROOT }}
# Путь к venv и запуск Gunicorn
ExecStart={{ settings.PROJECT_ROOT }}/venv/bin/gunicorn \
    -w 4 \
    -k uvicorn.workers.UvicornWorker \
    app.api.main:app \
    --bind 127.0.0.1:{{ settings.API_PORT }} \
    --access-logfile {{ settings.PROJECT_ROOT }}/output/gunicorn_access.log \
    --error-logfile {{ settings.PROJECT_ROOT }}/output/gunicorn_error.log

Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
